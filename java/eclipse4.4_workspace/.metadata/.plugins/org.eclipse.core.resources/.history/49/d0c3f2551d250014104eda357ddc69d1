import java.util.Arrays;
import java.util.List;

import org.apache.commons.lang.builder.ToStringBuilder;


public class Client {

	public static void main(String[] args){
		// primitive int Array's as List  
		int[] a = {1,2,3,4,5};
    	List list = Arrays.asList(a);
		System.out.println("int数组的大小:" + list.size());
		
		// Integer Arrays's as List
		int num = 5;
		Integer[] b = new Integer[num];
		for(int i =0;i<num;i++){
			 b[i] = i;
		}
		List<Integer> list2 = Arrays.asList(b);
		System.out.println("Integer数组的大小:" + list2.size());
		
		// 测试 Arrays的asList函数 返回的list中的对象 是否就是 数组中的对象（即引用值是否一致）
		TestObject[] c = new TestObject[num];
		for(int i=0;i<10;i++){
			c[i] = new TestObject(i);
			
		}
		
	}
}

class TestObject{
	public TestObject(int _id){
		id = _id;
	}
	
	public String toString(){
		return new ToStringBuilder(this)
		.append("id",id)
		.toString();
	}
	
	private int id;
	

}
